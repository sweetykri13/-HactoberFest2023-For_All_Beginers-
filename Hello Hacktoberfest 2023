    </header>
    <main>
        <p>Click the button to change the message:</p>
        <button id="changeButton">Change Message</button>
        <p id="message">Welcome to Hacktoberfest 2023!</p>
    </main>
    <script>
        const messageElement = document.getElementById("message");
        const changeButton = document.getElementById("changeButton");

        // Function to change the message when the button is clicked
        changeButton.addEventListener("click", () => {
            messageElement.textContent = "Thanks for participating in Hacktoberfest 2023!";
        });
    </script>
